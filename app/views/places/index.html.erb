<p id="notice"><%= notice %></p>

<h1>Listing Places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Capacity</th>
      <th>Cost</th>
      <th>Goods</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Status</th>
      <th>Category</th>
      <th>Role</th>
      <th>Dayoff</th>
      <th>Localization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.description %></td>
        <td><%= place.capacity %></td>
        <td><%= place.cost %></td>
        <td><%= place.goods %></td>
        <td><%= place.latitude %></td>
        <td><%= place.longitude %></td>
        <td><%= place.status %></td>
        <td><%= place.category %></td>
        <td><%= place.role %></td>
        <td><%= place.dayoff %></td>
        <td><%= place.localization %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

