
<div class="container">
  <% if current_user.present? %>
  <%= render 'layouts/header' %>
  <% end %>


  <div class="card">
    <form >
      <div class="col-sm-3 m-b-20">
        <div class="form-group fg-line">
          <label>Categoría</label>
          <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "description"), {class:'selectpicker bs-select-hidden', 'data-live-search' => 'true'}%>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3 m-b-25">
          <label>Fecha Inicial</label>
          <div class="input-group form-group">
            <span class="input-group-addon"><i class="md md-event"></i></span>
            <div class="dtp-container dropdown fg-line">
            <input name="fein" type="text" class="form-control date-time-picker" data-toggle="dropdown" placeholder="Click aquí..." aria-expanded="false" <%= @fein %>>
            </div>
          </div>
        </div>
        <div class="col-sm-3 m-b-25">
          <label>Fecha Final</label>
          <div class="input-group form-group">
            <span class="input-group-addon"><i class="md md-event"></i></span>
            <div class="dtp-container dropdown fg-line">
              <input name="fefi" type="text" class="form-control date-time-picker" data-toggle="dropdown" placeholder="Click aquí..." aria-expanded="false" <%= @fefi %>>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-3 m-b-20">
        <label>Invitados</label>
        <div class="dtp-container dropdown">
          <div class="fg-line">
            <textarea class="form-control" rows="5" placeholder="Invitados..."></textarea>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3 m-b-25">
          <button type="submit" class="btn btn-primary btn-sm m-t-10 waves-effect">Nueva Búsqueda...</button>
        </div>
      </div>
    </form>
  </div>
</div>

<h1>Salas disponibles</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Capacidad</th>
        <th>Costo</th>
        <th>Ubicación</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.description %></td>
        <td><%= place.capacity %></td>
        <td><%= place.cost %></td>
        <td><%= place.localization.campus %></td>
        <td><%= link_to 'Ver Detalle', place %></td>
        <td><%= link_to 'Reservar', reservation_place_path(place, :guest => params[:guest], :startdate => params[:startdate], :enddate => params[:enddate]) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>