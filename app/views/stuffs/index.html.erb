<p id="notice"><%= notice %></p>

<h1>Listing Stuffs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cuantity</th>
      <th>Cost</th>
      <th>Status</th>
      <th>Role</th>
      <th>Dayoff</th>
      <th>Localization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stuffs.each do |stuff| %>
      <tr>
        <td><%= stuff.name %></td>
        <td><%= stuff.description %></td>
        <td><%= stuff.cuantity %></td>
        <td><%= stuff.cost %></td>
        <td><%= stuff.status %></td>
        <td><%= stuff.role %></td>
        <td><%= stuff.dayoff %></td>
        <td><%= stuff.localization %></td>
        <td><%= link_to 'Show', stuff %></td>
        <td><%= link_to 'Edit', edit_stuff_path(stuff) %></td>
        <td><%= link_to 'Destroy', stuff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

